<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<fx:root
        type="javafx.scene.layout.VBox"
        xmlns="http://javafx.com/javafx/21"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="org.example.fxdemo.control.DescriptionDetailViewController">
    <Label text="Edit Description"/>
    <TextField fx:id="descriptionField"/>
    <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button onAction="#handleBack" text="_Back"/>
            <Button defaultButton="true" onAction="#handleSave" text="Save"/>
            <Button fx:id="btnDelete" onAction="#handleDelete" text="_Delete"/>
            <Button cancelButton="true" onAction="#handleCancel" text="Cancel"/>
        </buttons>
    </ButtonBar>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</fx:root>
